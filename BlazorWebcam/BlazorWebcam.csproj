<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <!-- Target framework for the project -->
    <TargetFramework>net6.0</TargetFramework>
    <!-- Enable nullable reference types for improved null safety -->
    <Nullable>enable</Nullable>
    <!-- Enable implicit using directives to reduce boilerplate -->
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <!-- Package references for various libraries used in the project -->
    <PackageReference Include="ChatGPT.Net" Version="2.0.0" />
    <PackageReference Include="Mediapipe.Net.Runtime.CPU" Version="0.9.1" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="6.0.30" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.2" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.2" PrivateAssets="all" />
    <PackageReference Include="OpenCvSharp4.runtime.win" Version="4.10.0.20241108" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.6" />
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
  </ItemGroup>

</Project>
